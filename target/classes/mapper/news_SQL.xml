<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="news">
    <!-- 공지 -->
	<select id="list" parameterType="hashmap" resultType="hashmap">
		<![CDATA[		
			SELECT *
			FROM board	
		]]>
	</select>

    <!-- 추천리스트 -->
	<select id="k_list" parameterType="hashmap" resultType="hashmap">
		<![CDATA[		
			SELECT * FROM board 
			where b_like > 10
			LIMIT 10;	
		]]>
	</select>

    <!-- 새소식 -->
	<select id="n_list" parameterType="hashmap" resultType="hashmap">
		<![CDATA[		
			SELECT * FROM board
			ORDER BY b_modidate DESC
			limit 10;	
		]]>
	</select>
	
	<!-- 통합검색 -->
	<select id="s_list" parameterType="hashmap" resultType="hashmap">
		<![CDATA[		
			SELECT * FROM board 
			where b_title LIKE '%어%' or b_content LIKE '%ㄴㅇ%'
			order by b_no desc;
		]]>
	</select>
	
	<!-- 사용자리스트 -->
	<select id="u_list" parameterType="hashmap" resultType="hashmap">
		<![CDATA[		
			SELECT * FROM login;
		]]>
	</select>


</mapper>